@model BeauitySaloonWeb.Models.ViewModel.Cities.CityInputModel
@{
    ViewBag.Title = "Add a new city";
}

<div class="col-lg-6">
    <h2>New City</h2>
    @using (Html.BeginForm("AddCity", "AdminCities", FormMethod.Post, new { @class = "pt-4" }))
    {
        <div class="form-group row">
            <label class="col-sm-2 col-form-label">Name</label>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @required = "required" })
                <span>@Html.ValidationMessageFor(x => x.Name, null, new { @class = "text-danger" })</span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-6 text-right">
                <button type="submit" class="btn btn-success">  
                    Add City    
                </button>
            </div>
            <div class="col-sm-6">
                <a class="btn btn-danger" href="/Administration/AdminSalons/Index">Cancel</a>
            </div>
        </div>
    }

</div>
