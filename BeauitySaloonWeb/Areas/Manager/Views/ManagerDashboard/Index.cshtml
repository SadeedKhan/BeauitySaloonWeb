@model BeauitySaloonWeb.Models.ViewModel.Salons.SalonsSimpleListViewModel
@{
    this.ViewData["Title"] = "Salon Manager Dashboard";
}

<h3>Welcome to Salon Manager Dashboard!</h3>
<p>Here are the salons you manage:</p>

<div>
    @{
        if (Model.Salons != null)
        {
            foreach (var salon in Model.Salons)
            {
                <a href="/Manager/Salons/Details/@salon.Id"
                   class="list-group-item list-group-item-action bg-light">@salon.Name</a>
            }
        }
    }
</div>
