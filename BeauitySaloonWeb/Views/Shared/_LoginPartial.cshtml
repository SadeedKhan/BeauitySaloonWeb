
@using BeauitySaloonWeb.
@using BeauitySaloonWeb.Models
@using Microsoft.AspNet.Identity
@model SignInManager<ApplicationUser> SignInManager
@model UserManager<ApplicationUser> UserManage
@{
    if (this.SignInManager.IsSignedIn(UserManager.User))
    {
        <li>
            <a asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @(this.User.Identity.Name)!</a>
        </li>
        if (this.User.IsInRole("Administration"))
        {
            <li>
                <a href="~/Administration/Dashboard/Index" title="Admin">Admin</a>
            </li>
        }
<li>
    @using (Html.Be
    <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@(this.Url.Action("Index", "Home", new { area = string.Empty }))">
        <button class="btn btn-dark" type="submit">Logout</button>
    </form>
</li>
    }
    else
    {
        <li>@Html.ActionLink("Register", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>

        <li>@Html.ActionLink("Log in", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    }
}

