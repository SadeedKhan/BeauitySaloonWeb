@model BeauitySaloonWeb.Models.ViewModel.Appointments.AppointmentViewModel
@{
    this.ViewData["Title"] = "Cancel Appointment";
}

@{
    if (Model != null)
    {
        <h3><strong>Are you sure you want to cancel this appointment?</strong></h3>
        <form class="col-6 mt-5">
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Date and Time</label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.DateTime</div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Salon</label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.SalonName</div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Address</label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.SalonCityName, @Model.SalonAddress</div>
                </div>
            </div>
            <div class="form-group row">
                <label class="col-sm-3 col-form-label">Service</label>
                <div class="col-sm-7">
                    <div class="form-control">@Model.ServiceName</div>
                </div>
            </div>
        </form>

        <div class="col-6 mt-5 ml-5">
            <div class="row ml-5">
                @using (Html.BeginForm("DeleteAppointment", "Appointments",new {id= Model.Id }, FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                        <button type="submit" class="btn btn-outline-success">
                            Yes, Cancel it!
                        </button>
                }
                    <div class="ml-5">
                        <a class="btn btn-danger" href="/Appointments/Index">No! Go Back</a>
                    </div>
                </div>
        </div>
    }
}
