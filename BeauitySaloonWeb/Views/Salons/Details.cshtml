@model BeauitySaloonWeb.Models.ViewModel.Salons.SalonWithServicesViewModel
@{
    ViewBag.Title = "Details";
}

@{
    if (Model != null)
    {
        <div class="row row-eq-height">
            <!-- Info Box -->
            <div class="col-lg-4 info_box_col">
                <div class="info_box">
                    <div class="info_image"><img src="@Model.ImageUrl" alt=""></div>
                    <div class="info_content">
                        <div class="info_title">@Model.Name</div>
                        <div class="info_text">Категория: <strong>@Model.CategoryName</strong></div>
                        <div class="info_text">Город: <strong>@Model.CityName</strong></div>
                        <div class="info_text">Адрес: <strong>@Model.Address</strong></div>
                        <div class="info_text">
                            Rating : &nbsp;&nbsp;
                            <span class="star-rating">
                                <span class="fa fa-star-o" data-rating="1"></span>
                                <span class="fa fa-star-o" data-rating="2"></span>
                                <span class="fa fa-star-o" data-rating="3"></span>
                                <span class="fa fa-star-o" data-rating="4"></span>
                                <span class="fa fa-star-o" data-rating="5"></span>
                                <input type="hidden" name="whatever1" class="rating-value" value="@Model.Rating">
                            </span>
                            <span>&nbsp; ( @Model.Rating.ToString("F") / 5.00 ) из @Model.RatersCount голосов</span>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Panel -->
            <div class="col-lg-7">
                <h2>Services :</h2>
                <div class="tab_panel active">
                    <div class="tab_panel_content">
                        <div class="tab_list">
                            <ul>
                                @foreach (var service in Model.Services.Where(x => x.Available == true))
                                {
                                    <li>
                                        <div class="tab_list_title">@service.ServiceName</div>
                                        <div class="tab_list_text"><p>@service.ServiceDescription</p></div>
                                        <div class="button info_button">
                                            <a  href="@Url.Action("MakeAnAppointment", "Appointments", new { salonId= service.SalonId, serviceId = service.ServiceId })">
                                                <span>book now</span>
                                                <span>book now</span>
                                            </a>
                                        </div>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
}


@section Scripts {
    <script src="~/Content/js/rating-static.js" asp-append-version="true"></script>
}
